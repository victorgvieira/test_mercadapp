<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ProductListFragment">


    <fragment
        android:id="@+id/ProductListFragment"
        android:name="com.victorgomes.test.myapplication.view.productlist.ProductListFragment"
        android:label="@string/lista_de_produtos"
        tools:layout="@layout/fragment_product_list">
        <action
            android:id="@+id/action_ProductListFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.victorgomes.test.myapplication.view.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.victorgomes.test.myapplication.view.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.victorgomes.test.myapplication.view.productdetail.ProductDetailFragment"
        android:label="@string/details" />
</navigation>